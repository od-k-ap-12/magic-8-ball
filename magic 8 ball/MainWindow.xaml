<Window x:Class="magic_8_ball.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:magic_8_ball"
        mc:Ignorable="d"
        Title="Magic 8 Ball" Height="450" Width="600">
    <Grid>
        <TextBox x:Name="textboxQuestion" HorizontalAlignment="Center" Margin="0,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="580" Height="158"/>
        <TextBox x:Name="textboxAnswer" HorizontalAlignment="Center" Margin="0,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="580" Height="158" RenderTransformOrigin="0.496,0.532"/>
        <Button Content="Get an answer" Margin="10,217,368,0" VerticalAlignment="Top" Height="34" Click="Button_Click"/>
        <Label Content="Enter your question:" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.555,0.535" FontSize="14"/>
    </Grid>
</Window>
